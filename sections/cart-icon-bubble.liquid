<div class="lst:absolute lst:-top-1 lst:-right-1">
  {%- if cart.item_count < 100 and cart.item_count > 0 -%}
    <span
      class="lst:rounded-full lst:bg-primary lst:border lst:border-black lst:text-xs lst:h-4 lst:w-4 lst:items-center lst:justify-center lst:flex"
      aria-hidden="true"
    >
      {{- cart.item_count -}}
    </span>
  {%- endif -%}
  <span class="visually-hidden">{{ 'sections.header.cart_count' | t: count: cart.item_count }}</span>
</div>
<span>
  <svg class="icon icon-search lst:h-8! lst:w-8!" aria-hidden="true" focusable="false">
      <use href="#icon-cart">
    </use>
  </svg>
  <span class="lst:sr-only">{{ 'templates.cart.cart' | t }}</span>
</span>
