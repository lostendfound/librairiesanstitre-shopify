{{ 'component-slideshow-vite.css' | asset_url | stylesheet_tag }}

<div class="slideshow js-slideshow slideshow--transition-fade" data-swipe="on">
  <p class="lst:sr-only">Slideshow Items</p>

  <ul class="slideshow__content">
    {%- for block in section.blocks -%}
      <li
        class="slideshow__item js-slideshow__item lst:relative"
      >
        <div class="lst:relative lst:w-full">
          {% if block.settings.image != blank %}
            <img
              src="{{ block.settings.image | img_url: 'master'  }}"
              class="lst:w-full lst:aspect-square lst:lg:aspect-[1920/852] lst:object-cover"
              width="1920"
              height="852"
              alt="{{ block.settings.heading | default: 'Carousel image' }}"
            >
          {% else %}
            <div class="lst:w-full lst:aspect-square lst:lg:aspect-[1920/852] lst:bg-black lst:flex lst:items-center lst:justify-center">
              <p class="lst:text-white lst:text-2xl">No image selected</p>
            </div>
          {% endif %}

          {% if block.settings.link != blank %}
            <a
              href="{{ block.settings.link }}"
              class="lst:absolute lst:inset-0 lst:cursor-pointer lst:z-10"
              aria-label="{{ block.settings.heading | default: 'View slide' }}"
            >
          {% else %}
            <div class="lst:absolute lst:inset-0 lst:z-10">
          {% endif %}
          {%- comment -%} Dark overlay - 60% opacity {%- endcomment -%}
          <div class="lst:absolute lst:inset-0 lst:bg-black/60 lst:!block"></div>

          {%- comment -%} Content overlay - white text {%- endcomment -%}
          <div class="lst:absolute lst:inset-0 lst:flex lst:flex-col lst:items-center lst:justify-between lst:text-white lst:px-6 lst:py-12 lst:lg:py-[1.7500rem]!">
            {%- comment -%} Top text {%- endcomment -%}
            {% assign top_text = block.settings.text_top | default: block.settings.heading %}
            {% if top_text != blank %}
              <div class="lst:text-center lst:max-w-4xl">
                <p class="lst:text-6xl lst:lg:text-hero lst:!text-white">
                  {{ top_text }}
                </p>
              </div>
            {% else %}
              <div></div>
            {% endif %}

            {%- comment -%} Middle text {%- endcomment -%}
            {% assign middle_text = block.settings.text_middle | default: block.settings.subheading %}
            {% if middle_text != blank %}
              <div class="lst:text-center lst:max-w-4xl">
                <h2 class="lst:text-heading lst:!text-white">
                  {{ middle_text }}
                </h2>
              </div>
            {% else %}
              <div></div>
            {% endif %}

            {%- comment -%} Bottom text {%- endcomment -%}
            {% if block.settings.text_bottom != blank %}
              <div class="lst:text-center lst:max-w-4xl">
                <p class="lst:text-6xl lst:lg:text-hero lst:!text-white">
                  {{ block.settings.text_bottom }}
                </p>
              </div>
            {% else %}
              <div></div>
            {% endif %}

            {%- comment -%} CTA Button - bottom right (only show if link exists) {%- endcomment -%}
            {% if block.settings.link != blank and block.settings.button_label != blank %}
              <span
                class="button button--white"
                style="position: absolute; right: 1.2273rem; bottom: 2.7000rem;"
              >
                {{- block.settings.button_label -}}
              </span>
            {% endif %}
          </div>
          {% if block.settings.link != blank %}
            </a>
          {% else %}
            </div>
          {% endif %}
        </div>
      </li>
    {%- endfor -%}
  </ul>
  {%- comment -%} Navigation bullets container {%- endcomment -%}
  <div class="js-slideshow-bullets lst:absolute lst:bottom-8 lst:left-1/2 lst:-translate-x-1/2 lst:z-10"></div>

  {%- comment -%} Arrow controls {%- endcomment -%}
  <div class="js-slideshow__control lst:absolute lst:left-4 lst:lg:left-[1.2273rem] lst:top-1/2 lst:-translate-y-1/2 lst:z-20">
    <button class="carousel__btn lst:lg:text-hero lst:text-black lst:bg-white! lst:hover:bg-white/60! lst:flex! lst:items-center lst:justify-center lst:rounded-full! js-tab-focus">
      <span class="lst:sr-only">Show previous slide</span>
      <span class="lst:transform lst:lg:translate-y-[-0.0325em]"><-</span>
    </button>
  </div>

  <div class="js-slideshow__control lst:absolute lst:right-4 lst:lg:right-[1.2273rem] lst:top-1/2 lst:-translate-y-1/2 lst:z-20">
    <button class="carousel__btn lst:lg:text-hero lst:text-black lst:bg-white! lst:hover:bg-white/60! lst:flex! lst:items-center lst:justify-center lst:rounded-full! js-tab-focus">
      <span class="lst:sr-only">Show next slide</span>
      <span class="lst:transform lst:lg:translate-y-[-0.0325em]">-></span>
    </button>
  </div>
</div>

{% schema %}
{
  "name": "t:sections.carousel.name",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [],
  "blocks": [
    {
      "type": "slide",
      "name": "t:sections.carousel.blocks.slide.name",
      "limit": 5,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "t:sections.carousel.blocks.slide.settings.image.label"
        },
        {
          "type": "text",
          "id": "text_top",
          "label": "Top text",
          "info": "Text displayed at the top of the slide"
        },
        {
          "type": "text",
          "id": "text_middle",
          "label": "Middle text",
          "info": "Large text displayed in the center of the slide"
        },
        {
          "type": "text",
          "id": "text_bottom",
          "label": "Bottom text",
          "info": "Text displayed at the bottom of the slide"
        },
        {
          "type": "inline_richtext",
          "id": "heading",
          "default": "Slide",
          "label": "t:sections.carousel.blocks.slide.settings.heading.label",
          "info": "Fallback for top text if not provided"
        },
        {
          "type": "select",
          "id": "heading_size",
          "options": [
            {
              "value": "h2",
              "label": "t:sections.all.heading_size.options__1.label"
            },
            {
              "value": "h1",
              "label": "t:sections.all.heading_size.options__2.label"
            },
            {
              "value": "h0",
              "label": "t:sections.all.heading_size.options__3.label"
            }
          ],
          "default": "h1",
          "label": "t:sections.all.heading_size.label"
        },
        {
          "type": "inline_richtext",
          "id": "subheading",
          "default": "Tell your brand's story through images",
          "label": "t:sections.carousel.blocks.slide.settings.subheading.label",
          "info": "Fallback for middle text if not provided"
        },
        {
          "type": "text",
          "id": "button_label",
          "default": "Button label",
          "label": "t:sections.carousel.blocks.slide.settings.button_label.label",
          "info": "t:sections.carousel.blocks.slide.settings.button_label.info"
        },
        {
          "type": "url",
          "id": "link",
          "label": "t:sections.carousel.blocks.slide.settings.link.label"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "t:sections.carousel.presets.name",
      "blocks": [
        {
          "type": "slide"
        },
        {
          "type": "slide"
        }
      ]
    }
  ]
}
{% endschema %}

<script src="{{ 'component-carousel-swipe-content-vite.js' | asset_url }}" defer="defer"></script>
<script src="{{ 'component-slideshow-vite.js' | asset_url }}" defer="defer"></script>
