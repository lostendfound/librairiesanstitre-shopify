<div class="lst:border-b lst:border-black">
  <div>
    <div class="lst:px-3 lst:lg:px-[1.2273rem] lst:pt-5 lst:pb-12 lst:border-b lst:border-black lst:before:content-[''] ">
      <h2 class="h2 lst:text-left lst:text-6xl lst:lg:text-hero">{{ section.settings.title }}</h2>
    </div>
    <div class="lst:grid lst:grid-cols-2 lst:lg:grid-cols-4 lst:divide-x lst:divide-black">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'product' %}
            {% render 'card-product-lst', card_product: block.settings.product %}
        {% endcase %}
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Featured products",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "blocks": [
    {
      "type": "product",
      "name": "Product",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Product"
        }
      ]
    }
  ],
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    }
  ],
  "presets": [
    {
      "name": "Featured products",
      "category": "Products"
    }
  ]
}
{% endschema %}
